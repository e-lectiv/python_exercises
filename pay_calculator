sh = input("Enter Hours: ")
sr = input("Enter Rate: ")
try:
  fh = float(sh)
  fr = float(sr)
except:
  print("Error, please enter numeric input")
# print (fh, fr)
if fh > 40 :
  reg = fr * 40
  print("Regular Pay:", reg)
  otp = (fh-40) + (fr * 1.5)
  print("Overtime Pay:", otp)
  tot = reg + otp
  print("Total Pay:", tot)
else:
  xp = fh * fr
print("Regular Pay:", xp)
